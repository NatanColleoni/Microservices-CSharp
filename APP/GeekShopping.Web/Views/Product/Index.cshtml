@model IEnumerable<ProductModel>

<br/>
<br/>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text" style="color: #d97706"> Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateView" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i><span class="ms-2">Create New Product</span>
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@((item.Price).ToString("c"))</td>
                    <td>
                        <a asp-action="UpdateView" class="btn btn-warning" asp-route-id="@item.Id">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a asp-action="DeleteView" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>